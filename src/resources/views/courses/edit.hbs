<div class="mt-4">
  <h3>Cập nhật khóa học</h3>
  <form method="POST" action="/courses/{{course._id}}?_method=PUT">
    <div class="form-group">
      <label for="name">Tên khóa học</label>
      <input
        type="text"
        class="form-control"
        value="{{course.name}}"
        name="name"
        id="name"
      />
    </div>
    <div class="form-group">
      <label for="description">Mô tả khóa học</label>
      <input
        type="text"
        class="form-control"
        value="{{course.description}}"
        name="description"
        id="description"
      />
    </div>
    <div class="form-group">
      <label for="videoID">Video ID</label>
      <input
        type="text"
        class="form-control"
        value="{{course.videoID}}"
        name="videoID"
        id="videoID"
      />
    </div>
    <div class="form-group">
      <label for="level" value="{{course.name}}">Trình độ</label>
      <input
        type="text"
        class="form-control"
        value="{{course.level}}"
        name="level"
        id="level"
      />
    </div>
    <button type="submit" class="btn btn-primary">Lưu lại</button>
  </form>
</div>